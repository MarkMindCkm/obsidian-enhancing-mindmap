{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "outDir": "build",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules","build/**/*"],
}
